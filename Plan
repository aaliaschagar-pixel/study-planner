const planner=document.getElementById("planner");
let total=0,done=0;

days.forEach((d,i)=>{
  const div=document.createElement("div");
  div.className="day";
  div.innerHTML=`<h3>${d[0]}</h3>`;
  for(let j=1;j<=2;j++){
    total++;
    const key=`${i}-${j}`;
    const c=localStorage.getItem(key)==="1";
    if(c)done++;
    div.innerHTML+=`
    <div>
    <input type="checkbox" ${c?"checked":""}
    onchange="localStorage.setItem('${key}',this.checked?1:0);location.reload()">
    <span class="time">‚è∞ Study:</span> ${d[j]}
    </div>`;
  }
  planner.appendChild(div);
});

document.getElementById("progress").innerText=
`Progress: ${done}/${total} tasks completed`;
